generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  phone     String?  @unique
  address   String?
  photo     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
